<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    <!--配置链接数据库的四要素  -->
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate</property>
    <property name="hibernate.connection.username">meng</property>
    <property name="hibernate.connection.password">mengdong</property>
    <!-- 辅助参数 -->
    <!--是否显示sql语句-->
    <property name="hibernate.show_sql">true</property>
    <!-- 是否格式化sql -->
    <property name="hibernate.format_sql">true</property>
    <!-- hbm2ddl -->
    <property name="hbm2ddl.auto">update</property>
    <!--使用线程安全的session  -->
     <property name="current_session_context_class">thread</property>
    <!-- 加载hbm.xml文件 -->
    <mapping resource="cn/xy/bean/District.hbm.xml"/>
    <mapping resource="cn/xy/bean/Street.hbm.xml"/>
	</session-factory>
</hibernate-configuration>